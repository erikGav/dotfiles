k8s_nuke() {
    local namespace=""
    local dry_run=false

    for arg in "$@"; do
        case "$arg" in
        --dry-run | -d)
            dry_run=true
            ;;
        *)
            namespace="$arg"
            ;;
        esac
    done

    if [[ -z "$namespace" ]]; then
        echo "Usage: k8s_nuke <namespace> [--dry-run|-d]"
        return 1
    fi

    local resources=(
        "pods"
        "deployments"
        "replicasets"
        "statefulsets"
        "daemonsets"
        "jobs"
        "cronjobs"
        "services"
        "ingress"
        "pvc"
        "configmap"
        "secret"
        "serviceaccount"
    )

    echo "âš ï¸  Target namespace: '$namespace'"
    if $dry_run; then
        echo "ðŸ’¡ Dry run mode â€” the following resources **would** be deleted:"
        for res in "${resources[@]}"; do
            echo "ðŸ” $res:"
            output=$(kubectl get "$res" -n "$namespace" --no-headers 2>/dev/null | awk '{print "  - " $1}')
            echo "${output:-  (none)}"
        done
        echo "âŒ Namespace '$namespace' would be deleted at the end."
    else
        echo "ðŸ”¥ Nuking resources in namespace: '$namespace'"
        for res in "${resources[@]}"; do
            echo "Deleting all $res..."
            kubectl delete "$res" --all -n "$namespace"
        done

        echo "âŒ Deleting namespace: $namespace"
        kubectl delete namespace "$namespace"
    fi
}

clip2txt () {
    local img lang="${1:-eng}"
    img="$(mktemp --suffix=.png)"
    
    if command -v wl-paste > /dev/null; then
        wl-paste --type image/png > "$img"
    elif command -v xclip > /dev/null; then
        xclip -selection clipboard -t image/png -o > "$img"
    else
        echo "No clipboard image tool found." >&2
        return 1
    fi
    
    tesseract "$img" - -l "$lang" 2> /dev/null \
        | tee /dev/tty \
        | xclip -selection clipboard
    
    rm -f "$img"
}


chpwd() {
    ls
}
